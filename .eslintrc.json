{
  "extends": [
    "airbnb-base",
    "react-app",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "curly": [
      "error",
      "all"
    ],
    "max-len": [
      "error",
      {
        "code": 80,
        "ignoreUrls": true
      }
    ],
    "no-console": [
      "off"
    ],
    "no-plusplus": [
      "error",
      {
        "allowForLoopAfterthoughts": true
      }
    ]
  }
}